{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES6"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "resolveJsonModule": true,
    "allowJs": false,
    "sourceMap": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["src/**/*", "index.ts", "cloudinary.ts", "cloudinary.ts"],
  "exclude": ["node_modules"],
  "lib": ["ESNext"],
  "ts-node": {
    "esm": true
  }
}